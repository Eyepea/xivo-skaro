<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/identityFrame"
    android:orientation="horizontal"
    android:clickable="true">

<ImageView android:id="@+id/statusContact"
    android:layout_width="50dp" 
    android:layout_height="50dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="left"
    android:layout_marginLeft="5dp" 
    android:src="@drawable/user"/>

<TextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="142dp"
    android:layout_height="wrap_content"
    android:id="@+id/user_identity"
    android:padding="3dp"
    android:textSize="16sp"
    android:maxLines="2"
    android:ellipsize="end"
    android:layout_gravity="center_vertical|left"
    android:layout_marginLeft="50dp" 
    android:text="@string/user_identity" >
</TextView>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="65dp"
    android:layout_height="55dp"
    android:id="@+id/identityClickZone"
    android:clickable="true"
    android:layout_gravity="right" 
    android:layout_marginRight="0dp"
    android:background="@drawable/bg_default_view">
    
<ImageView android:id="@+id/identity_current_state_image"
     android:layout_gravity="right"
     android:layout_width="26dp" 
     android:layout_height="26dp"
     android:layout_marginRight="20dp"
     android:layout_marginTop="2dp"
     android:src="@drawable/personal_trans"
     />

</FrameLayout>
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="offline"
    android:id="@+id/identity_current_state_longname"
    android:textSize="10sp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="30dp"
    android:layout_gravity="right"
    android:gravity="center"
    android:visibility="visible"
     />

<ImageView android:id="@+id/identityPhoneStatus"
     android:layout_width="30dp" 
     android:layout_height="30dp"
     android:layout_marginRight="88dp"
     android:layout_marginTop="0dp"
     android:layout_gravity="right" 
     android:src="@drawable/ic_dial_number_wht"/>
<TextView
    android:id="@+id/identityPhoneLongnameState"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="70dp"
    android:layout_marginTop="30dp"
    android:layout_gravity="right"
    android:gravity="center"
    android:text="offline"
    android:textSize="10sp"
    android:visibility="visible"
    />

</FrameLayout>

check process xivo-ctid with pidfile /var/run/xivo-ctid.pid
	group telephony
	start program = "/usr/bin/xivo-service restart no_monit"
	stop program = "/usr/bin/xivo-service stop no_monit"
	if failed host 127.0.0.1 port 5005 use type tcp
		timeout 10 seconds
		then restart
	if 5 restarts within 5 cycles then timeout
